@model THECinema.Web.ViewModels.Home.ContactUsInputModel
@{
    this.ViewData["Title"] = "Contact";
}

<h3 align="center">CONTACT</h3>
<p align="center">WE'RE ALWAYS HERE TO HELP YOU</p>

<div class="col-md-4 ml-auto mr-auto">
    <form asp-controller="Home" asp-action="Contact" method="post" class="form">

        <div class="form-group">
            <input asp-for="Name" type="text" placeholder="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input asp-for="Email" type="text" placeholder="E-Mail" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input asp-for="Subject" type="text" placeholder="Subject" class="form-control" />
            <span asp-validation-for="Subject" class="text-danger"></span>
        </div>

        <div class="form-group">
            <textarea asp-for="Message" class="form-control" placeholder="Message"></textarea>
            <span asp-validation-for="Message" class="text-danger"></span>
        </div>

        <hr />

        <input type="submit" class="btn btn-outline-success" value="SEND" />
    </form>
</div>

<div>
    <h3 class="ml-3">Find Us Here</h3>
    <div class="mapouter">
        <div class="gmap_canvas"><iframe width="1080" height="290" id="gmap_canvas" src="https://maps.google.com/maps?q=Clarence%20Town%20The%20Bahamas&t=&z=15&ie=UTF8&iwloc=&output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe></div>
    </div>
</div>

<style>
    .mapouter {
        margin-left: 15px;
        position: relative;
        text-align: right;
        height: 290px;
        width: 1080px;
    }

    .gmap_canvas {
        overflow: hidden;
        background: none !important;
        height: 290px;
        width: 1080px;
    }
</style>

